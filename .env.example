# L0 Public Reality Ledger Configuration
# Copy this file to .env and modify as needed

# ===========================================
# Database Configuration
# ===========================================

# Database URL
# Supported formats:
#   mem://              - In-memory database (data lost on restart)
#   file://./data       - File-based storage (persistent)
#   rocksdb://./data    - RocksDB storage (persistent, recommended for production)
#   ws://localhost:8000 - Remote SurrealDB server
L0_DB_URL=mem://

# Database namespace
L0_DB_NAMESPACE=l0

# Database name
L0_DB_DATABASE=ledger

# Database username (optional, for remote connections)
# L0_DB_USERNAME=root

# Database password (optional, for remote connections)
# L0_DB_PASSWORD=root

# ===========================================
# Tenant Configuration
# ===========================================

# Default tenant ID for multi-tenancy
L0_TENANT_ID=default

# ===========================================
# API Server Configuration
# ===========================================

# API server host
L0_API_HOST=0.0.0.0

# API server port
L0_API_PORT=3000

# Node ID (unique identifier for this L0 node)
L0_NODE_ID=node_primary

# ===========================================
# Logging Configuration
# ===========================================

# Log level: trace, debug, info, warn, error
RUST_LOG=info

# ===========================================
# P4 Layer - Bitcoin Anchoring Configuration
# ===========================================

# Enable Bitcoin anchoring
L0_P4_BITCOIN_ENABLED=false

# Bitcoin network: mainnet, testnet, signet, regtest
L0_P4_BITCOIN_NETWORK=testnet

# Bitcoin RPC endpoint
L0_P4_BITCOIN_RPC_URL=http://localhost:18332

# Bitcoin RPC authentication
L0_P4_BITCOIN_RPC_USER=
L0_P4_BITCOIN_RPC_PASS=

# Bitcoin RPC timeout in seconds
L0_P4_BITCOIN_RPC_TIMEOUT=30

# Bitcoin wallet name (optional, for multi-wallet setups)
# L0_P4_BITCOIN_WALLET=l0_anchor_wallet

# Anchor fee rate in sat/vB (0 = auto-estimate)
L0_P4_ANCHOR_FEE_RATE=0

# Minimum confirmations required for finality
L0_P4_MIN_CONFIRMATIONS=6

# ===========================================
# P4 Layer - Atomicals Protocol Configuration
# ===========================================

# Enable Atomicals inscriptions
L0_P4_ATOMICALS_ENABLED=false

# Atomicals ElectrumX API endpoint
L0_P4_ATOMICALS_API_URL=https://ep.atomicals.xyz/proxy

# Atomicals inscription prefix
L0_P4_ATOMICALS_PREFIX=l0anchor

# ===========================================
# P4 Layer - Retry Configuration
# ===========================================

# Maximum retry attempts for failed anchors
L0_P4_MAX_RETRIES=3

# Initial retry delay in seconds
L0_P4_RETRY_INITIAL_DELAY=60

# Maximum retry delay in seconds
L0_P4_RETRY_MAX_DELAY=3600

# Retry delay multiplier (for exponential backoff)
L0_P4_RETRY_MULTIPLIER=2.0

# ===========================================
# Legacy Anchor Configuration (deprecated, use P4 config above)
# ===========================================

# Ethereum RPC endpoint (optional)
# L0_ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Bitcoin RPC endpoint (optional, use L0_P4_BITCOIN_RPC_URL instead)
# L0_BTC_RPC_URL=http://localhost:8332

# ===========================================
# Signer Configuration
# ===========================================

# Threshold signing mode: local, distributed
# L0_SIGNER_MODE=local

# Number of signers required for threshold
# L0_SIGNER_THRESHOLD=6

# Total number of signers
# L0_SIGNER_TOTAL=9
